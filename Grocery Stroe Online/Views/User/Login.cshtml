@model Grocery_Stroe_Online.Models.Users

@{
    ViewData["Title"] = "Login page";
}


<div class="container">
    <h2>Login Form</h2>
    <form asp-controller="User" asp-action="Login">
        <div class="form-group">
            <label asp-for="Id">ID</label>
            <input class="form-control" placeholder="Enter Your ID" asp-for="Id" />
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" placeholder="Enter Your Name" asp-for="Name" />
            <span asp-validation-for="Name" class="text-warning"></span>
        </div>

        <div class="form-group form-check">
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox"> Remember me
                </label>
            </div>
        </div>
        <button class="btn btn-primary" type="submit">Login</button>
        @*<button type="submit" class="btn btn-primary">Submit</button>*@
    </form>



</div>

